#!/bin/sh
# Pre-commit hook for HumanSSH
# Runs formatting check, clippy, and cargo check

set -e

echo "ğŸ” Running pre-commit checks..."

# Check formatting
echo "  â†’ cargo fmt --check"
if ! cargo fmt --check --quiet 2>/dev/null; then
    echo "âŒ Formatting issues found. Run 'cargo fmt' to fix."
    exit 1
fi

# Run clippy (all targets including tests and benchmarks)
echo "  â†’ cargo clippy"
if ! cargo clippy --all-targets --all-features --quiet -- -D warnings 2>/dev/null; then
    echo "âŒ Clippy warnings found. Fix them before committing."
    exit 1
fi

# Check compilation
echo "  â†’ cargo check"
if ! cargo check --quiet 2>/dev/null; then
    echo "âŒ Compilation failed."
    exit 1
fi

echo "âœ… All checks passed!"
